    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/id_fragment_title"
        android:name="com.bryanrady.optimization.base.fragment.TitleFragment"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <fragment
